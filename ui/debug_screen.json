{
    "namespace": "debug_screen", // Current sampling screen for teting.
    "access_button@common_buttons.light_content_button": {
        "$pressed_button_name": "button.access",
        "size": [
            20,
            20
        ],
        "offset": [
            20,
            20
        ],
        "anchor_to": "top_left",
        "anchor_from": "top_left",
        "focus_enabled": false,
        "bindings": [
            {
                "binding_name": "#access_screen_visible",
                "binding_name_override": "#visible"
            }
        ]
    },
    "special_render": {
        "type": "custom",
        "renderer": "debug_screen_renderer"
    },
    "textElement0": { // Render only if the platform is Windows 10.
        "type": "label",
        "anchor_from": "center",
        "anchor_to": "center",
        "size": [
            100,
            10
        ],
       "ignored": false,
        "variables": [
            {
                "requires": "($is_windows_10_mobile)",
                "ignored": true
            }
        ],
        "text": "It's windows 10!"
    },
    "textElement1": {  // Render only if the platform is Mobile
        "type": "label",
        "anchor_from": "center",
        "anchor_to": "center",
        "size": [
            100,
            10
        ],
        "offset": [
            0,
            -40
        ],
        "variables": [
            {
                "requires": "(not $is_windows_10_mobile)",
                "ignored": true
            }
        ],
        "ignored": false,
        "text": "It's mobile!"
    },
    "content_panel": {
        "type": "panel",
        "clips_children": false,
        "size": [
            "100%",
            "100%"
        ],
        "controls": [
            {
                "textElement0@debug_screen.textElement0": {}
            },
            {
                "textElement1@debug_screen.textElement1": {}
            },
            {
                "access_button@debug_screen.access_button": {}
            },
            {
                "special_render@debug_screen.special_render": {}
            }
        ]
    },
    "debug_screen@common.base_screen": {
        "send_telemetry": false,
        "screen_not_flushable": true,
        "render_game_behind": true,
        "is_showing_menu": false,
        "low_frequency_rendering": true,
        "is_modal": true,
        "should_steal_mouse": false,
        "render_only_when_topmost": false,
        "screen_draws_last": true,
        "always_accepts_input": true,
        "$screen_content": "debug_screen.content_panel",
        "$screen_animations": [],
        "$use_loading_bars": false
    }
}